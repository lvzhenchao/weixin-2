/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.content {
  display: flex;
  flex-direction: row;
}

.content-left image {
  width: 300rpx;
  height: 400rpx;
  padding: 20rpx;
}

.content-right {
  padding: 20rpx;
}

.content-right view {
  margin-top: 20rpx;
}
.year {
  font-size: 30rpx;
  margin-left: 20rpx;
}
.score {
  color: orange;
}


